{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'permission required for bash command' | ./notify-interactive.sh",
            "description": "Notify when Claude wants to run bash commands that may need approval"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'input or decision needed' | ./notify-interactive.sh",
            "description": "Notify when Claude needs user input or decisions"
          }
        ]
      }
    ]
  }
}